{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2021",
    "lib": ["es2023"],
    "module": "es2022",
    "moduleResolution": "node",
    "declaration": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
